<UserControl x:Class="FormationUserControl.UserControls.Product"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FormationUserControl.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Titre Produit"></Label>
            <Label  Content="{Binding Title}"></Label>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Prix"></Label>
            <Label Content="{Binding Price}"></Label>
        </StackPanel>
    </StackPanel>
</UserControl>
